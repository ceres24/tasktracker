<% if @project_id.blank? %>
  <% owners = User.current %>
<% else %>
  <% owners = User.current.with_project(@project_id, true) %>
<% end %>

<%= label :sticky, :owner_id, 'Assigned To' %><br />
<%= select :sticky, :owner_id, options_for_select([['----', nil]] + owners.order('last_name, first_name').collect{|u| [u.reverse_name, u.id]}, @sticky.owner_id) %>
