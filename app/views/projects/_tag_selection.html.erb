<% if @project_id and project = Project.find_by_id(@project_id) and project.old_tags.size > 0 %>
  <div class="field">
    <%= label :sticky, :old_tags %><br />
    <table class="blank padded" style="width:100%;table-layout:fixed;margin-bottom:0px;">
    <% project.old_tags.in_groups_of(5).each do |row_tags| %>
      <tr>
        <% row_tags.each do |tag| %>
          <td><% if tag %><%= check_box_tag "sticky[old_tags][]", tag, @sticky.old_tags.include?(tag) %> <%= tag %><% end %></td>
        <% end %>
      </tr>
    <% end %>
    </table>
  </div>
<% end %>
