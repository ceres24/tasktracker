<% width = '914px' %>
<%= form_for(@sticky) do |f| %>
  <% if @sticky.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sticky.errors.count, "error") %> prohibited this sticky from being saved:</h2>

      <ul>
      <% @sticky.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <legend><%= @title %></legend>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description, :rows => 7, :style => "width:#{width}" %>
    </div>
    <div class="field">
      <%= f.label :project_id %><br />
      <%= f.select :project_id, options_for_select([['---', nil]] + current_user.all_projects.collect{|p| [p.name, p.id]}, @sticky.project_id) %>
    </div>
    <% if false %>
    <div class="field">
      <%= f.label :sticky_id %><br />
      <%= f.select :sticky_id, options_for_select([['---', nil]] + current_user.all_stickies.collect{|s| [s.id, s.id]}) %>
    </div>
    <% end %>
    <div class="field">
      <%= f.label :status %><br />
      <%= f.select :status, Sticky::STATUS %>
    </div>
    <div class="field">
      <%= f.label :sticky_type %><br />
      <%= f.select :sticky_type, Sticky::STICKY_TYPE %>
    </div>
    <div class="field">
      <%= f.label :start_date %><br />
      <%= f.text_field :start_date %>
    </div>
    <div class="field">
      <%= f.label :end_date %><br />
      <%= f.text_field :end_date %>
    </div>
  </fieldset>
  
  <div class="actions">
    <% form_name = @sticky.new_record? ? 'new_sticky' : "edit_sticky_#{@sticky.id}" %>
    <%= link_to_function image_tag('icons/tick.png', :alt => '') + (@sticky.new_record? ? "Create Sticky" : "Update Sticky"), "$('##{form_name}').submit();", :class => "button positive" %>
    <%= cancel %>
		<br />
  </div>

<% end %>
