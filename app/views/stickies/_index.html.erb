
<% [['planned', 'ongoing'], ['resolved', 'completed']].each do |status| %>
  <fieldset>
    <% stickies = @project.stickies.status(status) %>
    <legend><%= status.join(' and ').titleize %> Stickies (<%= stickies.size %>)</legend>
    <% stickies.each do |sticky| %>
      <div>
        <strong><%= sticky.status %></strong>
        <%= link_to sticky.user.name, sticky.user %> Sticky <%= link_to sticky.sticky_type, sticky %>:
        <pre><%= sticky.description %></pre><br />
        <% @object = sticky %>
        <% @limit = (status == ['planned', 'ongoing']) ? nil : 5 %>
        <% @position = ("%.6f" % Time.now.to_f).gsub('.','_') %>
        <div id="<%= @object.class.name.downcase %>_<%= @object.id %>_comments_<%= @position %>" class = "comment_box">
          <%= render :partial => 'comments/index' %>
          <hr />
        </div>
      </div>
      <br />
    <% end %>
  </fieldset>
<% end %>