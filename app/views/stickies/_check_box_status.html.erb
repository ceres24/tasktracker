<% params[:status] = current_user.sticky_filters['status'] if params['controller'] == 'stickies' and params['action'] == 'index' and current_user.sticky_filters['status'].kind_of?(Array) %>
<span style="white-space:nowrap">
  <%= check_box_tag 'status[]', 'planned', params[:status] ? params[:status].include?('planned') : true, id: 'status_planned' %>
  <span class="planned" style="padding-right:10px;white-space:nowrap">Not Completed</span>
</span>

<span style="white-space:nowrap">
  <%= check_box_tag 'status[]', 'completed', params[:status] ? params[:status].include?('completed') : true, id: 'status_completed' %>
  <span class="completed" style="padding-right:10px;text-decoration:line-through">Completed</span>
</span>
