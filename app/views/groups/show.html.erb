<% @title = "Group #{@group.name}" %>
<div class="page-header">
  <h1>
    <%= @title %>
    <small>Project <%= link_to @group.project.name, @group.project %></small>
    <% if current_user.all_groups.include?(@group) %>
      <%= link_to "Edit Group", edit_group_path(@group), class: 'btn btn-mini' %>
      <%= link_to "Delete Group", @group, confirm: "Are you sure you want to delete Group #{@group.name} and the associated #{pluralize @group.stickies.size, 'Sticky'}?", method: :delete, class: 'btn btn-mini btn-danger' %>
    <% end %>
    <%= link_to "View Groups", groups_path, class: 'btn btn-mini' %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>Creator</dt>
  <dd><%= link_to @group.user.name, @group.user %></dd>

  <dt>Generated From Template</dt>
  <dd><%= link_to @group.template.name, @group.template if @group.template %></dd>

  <dt>Additional Information</dt>
  <dd><%= simple_format @group.description %></dd>
</dl>

<%= form_tag search_stickies_path, method: :get, remote: true, id: "stickies_search", style: 'margin-bottom:0px', class: 'form-search' do %>
  <%= hidden_field_tag :order, params[:order] %>
  <%= hidden_field_tag :direction, 0 %>
  <% if false %>
    <%= text_field_tag 'search', params[:search], class: 'search-query' %>
    <%= submit_tag 'Search', class: 'btn btn-primary' %>
  <% end %>
  <%= hidden_field_tag 'group_id', @group.id %>
<% end %>

<div id="stickies">
  <%= @order = 'stickies.due_date'; @stickies = @group.stickies.page(1).per(-1); render partial: 'stickies/stickies' %>
</div>
