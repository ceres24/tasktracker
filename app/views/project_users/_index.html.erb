<ul>
<% @project.send(@relation).each do |user| %>
  <li><%= link_to user.name, user %> <%= link_to image_tag('icons/delete.png', :alt => '', :style => 'vertical-align:middle'), '#', :onclick => remote_function(:url => project_user_path(@project.project_users.find_by_user_id(user.id)), :method => :delete, :confirm => "Are you sure you want to remove #{user.name} from the list of #{@relation}?") + "; return false;" %></li>
<% end %>
</ul>