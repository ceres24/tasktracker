<div style="float:right">
  Per Page 
  <% [10,25,50].each do |count| %>
    <span class="per_page">
      <% if current_user.users_per_page != count %>
        <%= link_to count, "#", 'data-count' => count, 'data-object' => 'users', :id => "count_#{count}" %>
      <% else %>
        <%= count %>
      <% end %>
    </span>
  <% end %>
</div>

<div style="clear:both"></div>

<table width="100%">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Recent Activity</th>
    <% if current_user.system_admin? %>
      <th>Status</th>
      <th>System Admin</th>
      <th></th>
      <th></th>
    <% end %>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, user %></td>
    <td><%= user.email %></td>
    <td><%= recent_activity(user.current_sign_in_at) %></td>
    <% if current_user.system_admin? %>
      <td><%= user.status %></td>
      <td style="text-align:center"><%= check_box_tag 'user', 'system_admin', user.system_admin?, :disabled => true %></td>
      <td style="vertical-align:middle"><%= link_to image_tag('icons/edit.png', :alt => ''), edit_user_path(user) %></td>
      <td style="vertical-align:middle">
        <% unless current_user == user %>
          <%= link_to image_tag('icons/delete.png', :alt => ''), user, :confirm => "Are you sure you want to delete User #{user.name}?", :method => :delete %>
        <% end %>
      </td>
    <% end %>
  </tr>
<% end %>
</table>

<center><%= paginate @users %></center>