<h1>Listing frames</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Project</th>
    <th>Time Period</th>
    <th>Creator</th>
    <th>Description</th>
    <th></th>
  </tr>

<% @frames.each do |frame| %>
  <tr>
    <td><%= link_to frame.name, frame %></td>
    <td><%= link_to frame.project.name, frame.project %></td>
    <td><%= frame.start_date %><br />to<br /><%= frame.end_date %></td>
    <td><%= link_to frame.user.name, frame.user %></td>
    <td><%= frame.description %></td>
    <td style="vertical-align:middle">
      <% if current_user.all_frames.include?(frame) %>
        <%= link_to image_tag('icons/delete.png', :alt => ''), frame, :confirm => "Are you sure you want to delete Frame #{frame.name}?", :method => :delete %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Frame', new_frame_path %>
