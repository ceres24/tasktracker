<% @title = 'Frames' %>
<h1><%= @title %></h1>

<%= link_to image_tag('contour/addfile.png', :alt => '') + "Create New Frame", new_frame_path, :class => 'button positive' %>

<%= form_tag frames_path, :method => :get, :remote => true, :id => "frames_search", :style => "margin-bottom:-5px" do %>
  Search <%= text_field_tag 'search', params[:search] %> <%= information %>
<% end %>

<div id="frames"><div style="clear:both"></div><br /><center><%= image_tag "ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#frames_search").attr("action"), $("#frames_search").serialize(), null, "script");
  });
<% end %>