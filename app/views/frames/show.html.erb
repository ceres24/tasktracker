<% @title = "Frame: #{@frame.name}" %>
<h1><% if @frame.project %><%= link_to @frame.project.name, @frame.project %> &raquo;<% end %><%= @title %></h1>

<% if current_user.all_frames.include?(@frame) %>
  <%= link_to image_tag('icons/edit.png', :alt => '') + "Edit Frame", edit_frame_path(@frame), :class => 'button' %>
  <%= link_to image_tag('icons/delete.png', :alt => '') + "Delete Frame", @frame, :confirm => "Are you sure you want to delete Frame #{@frame.name}?", :method => :delete, :class => 'button negative' %>
<% end %>
<%= link_to image_tag('icons/mydocuments.png', :alt => '') + "View All Frames", frames_path, :class => 'button' %>

<div style="clear:both"></div>

<pre><%= @frame.description %></pre>
<br />

<p>
  <b>User:</b>
  <%= link_to @frame.user.name, @frame.user if @frame.user %>
</p>

<p>
  <b>Time Period:</b>
  <%= @frame.long_time %>
</p>