<% @title = "Frame: #{@frame.name}" %>
<div class="page-header">
  <h1>
    <%= @title %>
    <% if @frame.project %><small>Project <%= link_to @frame.project.name, @frame.project %></small><% end %>
    <% if current_user.all_frames.include?(@frame) %>
      <%= link_to "Edit Frame", edit_frame_path(@frame), class: 'btn btn-mini' %>
      <%= link_to "Delete Frame", @frame, confirm: "Are you sure you want to delete Frame #{@frame.name}?", method: :delete, class: 'btn btn-mini btn-danger' %>
    <% end %>
    <%= link_to "View Frames", frames_path, class: 'btn btn-mini' %>
  </h1>
</div>

<p><%= simple_format @frame.description %></p>

<p>
  <b>User:</b>
  <%= link_to @frame.user.name, @frame.user if @frame.user %>
</p>

<p>
  <b>Time Period:</b>
  <%= @frame.long_time %>
</p>
