<% @title = 'Tags' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <% if @project %><small>Project <%= link_to @project.name, @project %></small><% end %>
    <%= link_to "Create Tag", (@project ? new_tag_path(tag: { project_id: @project.id }) : new_tag_path), class: 'btn btn-mini btn-primary' %>
  </h1>
</div>

<%= form_tag tags_path, method: :get, remote: true, id: "tags_search", style: "margin-bottom:-5px" do %>
  <%= hidden_field_tag :order %>
  <%= hidden_field_tag :project_id, params[:project_id] %>
  Search <%= text_field_tag 'search', params[:search] %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="tags"><div style="clear:both"></div><br /><center><%= image_tag "ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#tags_search").attr("action"), $("#tags_search").serialize(), null, "script");
  });
<% end %>
