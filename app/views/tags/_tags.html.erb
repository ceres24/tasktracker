<%#= render partial: 'layouts/per_page', locals: { type: 'tags' } %>
<div class="pagination pagination-right">
  <ul>
    <li class="disabled"><a href="#">Per Page</a></li>
    <li class="active per_page"><%= link_to 20, "#" %></li>
  </ul>
</div>

<table class="table table-striped" style="width:100%">
  <tr>
    <th style="white-space:nowrap"><%== sort_field_helper(@order, 'tags.name', 'Name', 'tags_search') %></th>
    <th style="white-space:nowrap"><%== sort_field_helper(@order, 'tags.project_id', 'Project', 'tags_search') %></th>
    <th style="white-space:nowrap"><%== sort_field_helper(@order, 'tags.user_id', 'Creator', 'tags_search') %></th>
    <th>Description</th>
    <th>Actions</th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= @tag = tag; link_to render(partial: 'tags/show'), tag %></td>
    <td><%= link_to tag.project.name, tag.project %></td>
    <td><%= link_to tag.user.name, tag.user %></td>
    <td><%= tag.description %></td>
    <td>
      <%= link_to 'Delete', tag, confirm: "Are you sure you want to delete Tag #{tag.name}?", method: :delete, class: 'btn btn-mini btn-danger' if current_user.all_tags.include?(tag) %>
    </td>
  </tr>
<% end %>
</table>

<center><%= paginate @tags %></center>
