<% @title = 'Templates' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <% if @project %><small>Project <%= link_to @project.name, @project %></small><% end %>
    <%= link_to "Create Template", (@project ? new_template_path(template: {project_id: @project.id}) : new_template_path), class: 'btn btn-mini btn-primary' %>
  </h1>
</div>

<%= form_tag templates_path, method: :get, remote: true, id: "templates_search", style: "margin-bottom:-5px" do %>
  <%= hidden_field_tag :order, params[:order] %>
  <%= hidden_field_tag :project_id, params[:project_id] %>
  Search <%= text_field_tag 'search', params[:search] %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="templates"><div style="clear:both"></div><br /><center><%= image_tag "ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#templates_search").attr("action"), $("#templates_search").serialize(), null, "script");
  });
<% end %>
