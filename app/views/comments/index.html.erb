<% @title = 'Comments' %>
<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_tag comments_path, method: :get, remote: true, id: "comments_search", class: 'form-search' do %>
  <%= text_field_tag 'search', params[:search], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="comments"><center><%= image_tag "contour/ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#comments_search").attr("action"), $("#comments_search").serialize(), null, "script");
  });
<% end %>
