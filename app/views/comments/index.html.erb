<% @title = 'Comments' %>
<h1><%= @title %></h1>

<%= form_tag comments_path, method: :get, remote: true, id: "comments_search", style: "margin-bottom:-5px", class: 'form-search' do %>
  <%= text_field_tag 'search', params[:search], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="comments"><div style="clear:both"></div><br /><center><%= image_tag "ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#comments_search").attr("action"), $("#comments_search").serialize(), null, "script");
  });
<% end %>
