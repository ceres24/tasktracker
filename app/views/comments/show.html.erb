<% @title = "Comment #{@comment.name}" %>
<div class="page-header">
  <h1>
    <%= @title %>
    <% if current_user.all_comments.include?(@comment) %>
      <%= link_to "Edit Comment", edit_comment_path(@comment), class: 'btn btn-mini' %>
      <%= link_to "Delete Comment", @comment, confirm: "Are you sure you want to delete Comment #{@comment.name}?", method: :delete, class: 'btn btn-mini btn-danger' %>
    <% end %>
    <%= link_to "View Comments", comments_path, class: 'btn btn-mini' %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>User</dt>
  <dd><%= link_to @comment.user.name, @comment.user %></dd>

  <dt>Sticky</dt>
  <dd><%= link_to @comment.sticky.name, @comment.sticky if @comment.sticky %></dd>

  <dt>Description</dt>
  <dd><%= @comment.description %></dd>
</dl>
